              <p>
                Ordered on: <strong>
                  <%= order.createdAt.toLocaleString() %>
                </strong>
              </p>
            </div>
          </div>

          <!-- Product Info -->
          <div class="orderstatus-product-info">
            <% order.products.forEach(item=> { %>
              <div class="product-item">
