<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
      }
      .container {
        margin-top: 20px;
      }
      .profile-header {
        text-align: center;
        margin-bottom: 20px;
        color: #070707;
      }
      .sidebar {
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
      }
      .sidebar ul {
        list-style: none;
        padding: 0;
      }
      .sidebar ul li {
        margin-bottom: 10px;
      }
      .sidebar ul li a {
        text-decoration: none;
        color: #000;
        font-weight: bold;
      }
      .sidebar ul li a:hover {
        color: #ff1500;
      }
      .profile-content {
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
      }
      .profile-picture {
        width: 100%;
        max-width: 200px;
        margin: 0 auto 20px auto;
        display: block;
      }
      .profile-picture img {
        width: 100%;
        border-radius: 50%;
        border: 5px solid #ddd;
      }
      .btn-edit-password,
      .btn-edit-profile {
        display: block;
        width: 100%;
        max-width: 200px;
        margin: 20px auto;
        color: #fff;
        border: none;
        border-radius: 5px;
      }
      .btn-edit-password {
        background-color: #000;
      }
      .btn-edit-profile {
        background-color: #ff0000;
      }
      .address-section {
        background-color: #343a40;
    color: #fff;
    padding: 20px;
    border-radius: 20px;
      }
      .address-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 20px;
      }
      .address-container h5 {
        margin: 0;
      }
      .address-section button {
        display: inline-block;
        margin-top: 10px;
        margin-right: 10px;
        background-color: #ffffff;
        color: #000000;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
      }
      .address-section button:hover {
        background-color: #ff0707;
        color: #fff;
      }
      .address-section {
  padding: 20px;
  border: 1px solid #ccc;
  margin-bottom: 10px;
}

.edit-form label {
  display: block;
  margin-top: 10px;
}

.edit-form input {
  width: 100%;
  padding: 8px;
  margin: 5px 0;
  box-sizing: border-box;
}

button {
  margin-top: 10px;
  padding: 8px 16px;
  background-color: #007bff;
  color: white;
  border: none;
  cursor: pointer;
}

.updatedbutn{
    margin-left: 300px;
    color: #05f925;
}

button:hover {
  background-color: #0056b3;
}


      @media (max-width: 768px) {
        .row {
          flex-direction: column;
        }
        .sidebar,
        .profile-content {
          margin-bottom: 20px;
        }
        .address-container {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="breadcrumb__text">
              <h1 class="profile-header">Edit User Profile</h1>
              <div class="breadcrumb__links">
                <a href="/">Home ></a>
                <a href="/userProfile">User Profile ></a>
                <a href="#">Edit Profile ></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Breadcrumb Section End -->
    <div class="container">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar">
          <ul>
            <li><a href="/userProfile">Profile</a></li>
            <li><a href="/editProfile">Add Address</a></li>
            <li><a href="/savedAddresses">All Saved Addresses</a></li>
            <li><a href="/myorders">My Orders</a></li>
            <li><a href="/cartPage">Cart</a></li>
            <li><a href="/wishlist">Wishlist</a></li>
            <li><a href="/wallet">My wallet</a></li>
            <li><a href="#">Coupons</a></li>
          
          </ul>
          <button class="btn btn-dark mt-4 w-100" onclick="window.location.href='/logout'">
            Logout
          </button>
        </div>

        <!-- Profile Content -->
        <div class="col-md-9 profile-content">
          <div class="text-center">
            <div class="profile-picture">
              <img src="images/userProfilePicture.png" alt="Profile Picture" />
            </div>
          </div>
          <h3 class="text-center">WELCOME</h3>
          
       
        
          <% for(let i = 0; i < address.length; i++) { %> 
          <div class="address-section">
              <div class="address-container">
                <h5>Username: <%= address[i].adress.name %></h5>
                <h5>Phone Number: <%= address[i].adress.phone %></h5>
                <h5>State: <%= address[i].adress.state %></h5>
                <h5>City: <%= address[i].adress.city %></h5>
                <h5>District: <%= address[i].adress.district %></h5>
                <h5>Post Code: <%= address[i].adress.pincode %></h5>
                <h5>House Address: <%= address[i].adress.building %></h5>
                <h5>Area: <%= address[i].adress.area %></h5>
        
                      </div>
                      <button class="edit-button" onclick="toggleEditForm()">Edit</button>
                      <button onclick="if(confirm('Are you sure you want to delete this address?')) window.location.href='/deleteAdress?id=<%= address[i]._id %>'">
                          Delete Address
                      </button>
                    </div>
                   
                    
               
                    <form id="edit-address-form" class="edit-form" style="display:none;" action="/editSavedAddress?id=<%= address[i]._id %>" method="post">
                <label for="username">Username:</label>
                <input type="text" id="username" name="name" value="" required placeholder="">
            
                <label for="phone">Phone Number:</label>
                <input type="text" id="phone" name="phoneNumber" value="" required  placeholder="">
            
                <label for="state">State:</label>
                <input type="text" id="state" name="state" value="" required  placeholder="">
            
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value="" required  placeholder="">
            
                <label for="district">District:</label>
                <input type="text" id="district" name="district" value="" required  placeholder="">
            
                <label for="pincode">Post Code:</label>
                <input type="text" id="pincode" name="pincode" value="" required  placeholder="">
            
                <label for="building">House Address:</label>
                <input type="text" id="building" name="building" value="" required  placeholder="">
            
                <label for="area">Area:</label>
                <input type="text" id="area" name="area" value="" required  placeholder="">
            
               
                <button type="submit">Submit</button>
                
                <button type="button" onclick="toggleEditForm()">Cancel</button>
              </form>
             
              <% } %>
            
            </div>
            
          
        
          
        </div>
      </div>
    </div>
  </body>
  <script>
    function toggleEditForm() {
  const form = document.getElementById('edit-address-form');
  
  
  if (form.style.display === 'none' || form.style.display === '') {
    form.style.display = 'block'; 
  } else {
    form.style.display = 'none';  
  }
}

  </script>
</html>
