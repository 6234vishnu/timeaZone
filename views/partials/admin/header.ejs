    <style>
        body {
            background-color: #000000;
            margin: 0;
            /* padding-left: 250px; */
            margin-left: 250px;
            /* Sidebar width */
            padding: 20px;

            margin-top: 50px;
            height: 100%;
            overflow-x: hidden;
        }

        .sidebar {
            /* width: auto;
    background-color: #ffffff;
    color: #000000;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    padding: 25px;
    z-index: 1000;  */

            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            /* Full viewport height */
            background-color: #ffffff;
            /* Dark background for sidebar */
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            z-index: 1000;
            /* Ensure the sidebar stays on top */
            overflow-y: auto;
        }

        .sidebar a {
            /* color: #000000;
            text-decoration: none;
            display: block;
            padding: 20px;
             */
            display: block;
            padding: 20px;
            color: white;
            text-decoration: none;
            font-size: 1rem;
            margin-bottom: 10px;
            background-color: #000000;
            border-radius: 13px;
        }

        .sidebar a:hover {
            background-color: #ff0000;
            color: #fff;
        }

        .sidebar .sidebar-title {
            padding: 15px;
            font-weight: bold;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            background-color: #363c49;
            color: #fff;
        }

        .toggle-btn {
            background-color: #343a40;
            color: #fff;
            border: none;
            padding: 10px;
            cursor: pointer;
            display: none;
        }

        .sidebar-collapsed {
            width: 60px;
        }

        .sidebar-collapsed .sidebar-title,
        .sidebar-collapsed a {
            display: none;
        }

        header .logo {
            width: 156px;
            height: 60px;
        }

        header .highlight {
            color: #ff0000;
        }

        .buttonLogoutAdmin {
            color: #fff;
            background-color: #fd0019;
            border-color: #fff;
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 60px;
            }

            .toggle-btn {
                display: block;
            }

            .sidebar-collapsed {
                width: 0;
            }
        }
    </style>
</head>

