    <script src="https://cdn.jsdelivr.net/npm/cropperjs@1.5.12/dist/cropper.min.js"
        integrity="sha384-QtscNN9ACZjOg7BPmqK4vG8OVfZ0x5MW1J1khd7Lfa4o8X0jIW9bHt78dpSbt3iK"
        crossorigin="anonymous"></script>
